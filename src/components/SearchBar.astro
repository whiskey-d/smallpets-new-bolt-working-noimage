<div class="max-w-xl mx-auto">
  <div class="relative">
    <input
      type="text"
      id="search"
      class="w-full rounded-lg border border-gray-300 px-4 py-3 pl-10 focus:border-primary focus:outline-none focus:ring-1 focus:ring-primary"
      placeholder="Search for dog products..."
    />
    <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
      <svg class="h-5 w-5 text-gray-400" viewBox="0 0 20 20" fill="currentColor">
        <path fill-rule="evenodd" d="M8 4a4 4 0 100 8 4 4 0 000-8zM2 8a6 6 0 1110.89 3.476l4.817 4.817a1 1 0 01-1.414 1.414l-4.816-4.816A6 6 0 012 8z" clip-rule="evenodd" />
      </svg>
    </div>
    <button
      type="submit"
      class="absolute inset-y-0 right-0 px-4 text-white bg-primary hover:bg-primary-dark rounded-r-lg transition-colors"
    >
      Search
    </button>
  </div>
</div>

<script>
  const searchInput = document.getElementById('search');
  
  searchInput?.addEventListener('input', async (e) => {
    const query = (e.target as HTMLInputElement).value;
    if (query.length > 2) {
      const response = await fetch(`/api/search?q=${encodeURIComponent(query)}`);
      const results = await response.json();
      // Update results display
    }
  });
</script>