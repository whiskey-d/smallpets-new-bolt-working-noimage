---
import Layout from '../../../layouts/Layout.astro';
import ProductCard from '../../../components/ProductCard.astro';
import FilterBar from '../../../components/FilterBar.astro';
import Pagination from '../../../components/Pagination.astro';
import { categories } from '../../../lib/categories';
import { getProductsByCategory } from '../../../lib/products';

export async function getStaticPaths({ paginate }) {
  return Object.entries(categories).flatMap(([slug, category]) => {
    const products = getProductsByCategory(category.title);
    return paginate(products, {
      params: { category: slug },
      pageSize: 24,
      props: { categoryInfo: category }
    });
  });
}

const { page, categoryInfo } = Astro.props;
const { category } = Astro.params;

const breadcrumbs = [
  { name: 'Home', href: '/' },
  { name: categoryInfo.title, href: '#' }
];

const baseUrl = `/category/${category}/`;
---

<Layout 
  title={`${categoryInfo.title} for Small Dogs - Page ${page.currentPage}`}
  description={categoryInfo.description}
>
  <main class="min-h-screen bg-gray-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
      <!-- Breadcrumbs -->
      <nav class="mb-8">
        <ol class="flex items-center space-x-2 text-sm">
          {breadcrumbs.map((item, index) => (
            <li class="flex items-center">
              {index > 0 && <span class="mx-2 text-gray-400">/</span>}
              {item.href === '#' ? (
                <span class="text-gray-900 font-medium">{item.name}</span>
              ) : (
                <a href={item.href} class="text-primary hover:text-primary-dark">
                  {item.name}
                </a>
              )}
            </li>
          ))}
        </ol>
      </nav>

      <!-- Category Header -->
      <div class="mb-12">
        <h1 class="text-4xl font-bold text-gray-900 mb-4">{categoryInfo.title}</h1>
        <p class="text-lg text-gray-600">{categoryInfo.description}</p>
      </div>

      <!-- Subcategories Grid -->
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 mb-16">
        {categoryInfo.subcategories.map(subcategory => (
          <a 
            href={`/category/${category}/${subcategory.slug}/1`}
            class="block p-6 bg-white rounded-lg shadow-sm hover:shadow-md transition-shadow"
          >
            <h3 class="text-lg font-semibold text-gray-900 mb-2">{subcategory.name}</h3>
            <p class="text-gray-600 mb-4">{subcategory.description}</p>
            <span class="text-primary hover:text-primary-dark transition-colors text-sm">
              View products â†’
            </span>
          </a>
        ))}
      </div>

      <!-- Products Grid -->
      {page.data.length > 0 && (
        <section>
          <h2 class="text-2xl font-bold text-gray-900 mb-8">Featured Products</h2>
          <FilterBar />
          <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6">
            {page.data.map(product => (
              <ProductCard product={product} />
            ))}
          </div>
          
          <Pagination
            currentPage={page.currentPage}
            totalPages={page.lastPage}
            baseUrl={baseUrl}
          />
        </section>
      )}
    </div>
  </main>
</Layout>